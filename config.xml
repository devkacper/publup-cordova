<?xml version='1.0' encoding='utf-8'?>
<widget id="com.publup.app" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Publup</name>
    <description>
        Easier, faster and more effective way to express yourself.
    </description>
    <author email="theofficialpublup@gmail.com" href="https://publup.com/pages/contact">
        Publup contact
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin='*'/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="res/android/icon.png" />
        <allow-navigation href="https://publup.com" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <icon src="res/ios/icon.png" height="57" width="57" />
        <icon src="res/ios/icon-20.png" height="20" width="20" />
        <icon src="res/ios/icon-29.png" height="29" width="29" />
        <icon src="res/ios/icon-50.png" height="50" width="50" />
        <icon src="res/ios/icon-72.png" height="72" width="72" />
        <icon src="res/ios/icon-76.png" height="76" width="76" />
        <icon src="res/ios/icon-1024.png" height="1024" width="1024" />
        <icon src="res/ios/icon@2x.png" height="114" width="114" />
        <icon src="res/ios/icon-20@2x.png" height="40" width="40" />
        <icon src="res/ios/icon-20@3x.png" height="60" width="60" />
        <icon src="res/ios/icon-24@2x.png" height="48" width="48" />
        <icon src="res/ios/icon-27.5@2x.png" height="55" width="55" />
        <icon src="res/ios/icon-29@2x.png" height="58" width="58" />
        <icon src="res/ios/icon-29@3x.png" height="87" width="87" />
        <icon src="res/ios/icon-40@2x.png" height="80" width="80" />
        <icon src="res/ios/icon-44@2x.png" height="88" width="88" />
        <icon src="res/ios/icon-50@2x.png" height="100" width="100" />
        <icon src="res/ios/icon-60@2x.png" height="120" width="120" />
        <icon src="res/ios/icon-60@3x.png" height="180" width="180" />
        <icon src="res/ios/icon-72@2x.png" height="144" width="144" />
        <icon src="res/ios/icon-76@2x.png" height="152" width="152" />
        <icon src="res/ios/icon-83.5@2x.png" height="167" width="167" />
        <icon src="res/ios/icon-86@2x.png" height="172" width="172" />
        <icon src="res/ios/icon-98@2x.png" height="196" width="196" />
        <allow-navigation href="*" />
        <allow-intent href="*" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <splash src="res/ios/screen/Default@2x~universal~anyany.png" />
    <preference name="BackgroundColor" value="0x202124"/>
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#202124" />
    <edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
        <string>need camera access to take pictures</string>
    </edit-config>
</widget>
